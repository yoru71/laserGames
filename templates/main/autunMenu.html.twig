{% extends "base.html.twig" %}

{% block title %}{% endblock %}

{% block body %}
<header>
    {% set route = app.request.attributes.get('_route') %}
    <nav id="main-navbar" class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item{% if route == 'autunMenu' %} active{% endif %}">
                    <a class="nav-link h2" href="{{ path('autunMenu') }}">Autun</a>
                </li>
            </ul>
            <ul class="navbar-nav text-right">
                <li class="nav-item{% if route == 'laserGameAutun' %} active{% endif %}">
                    <a class="nav-link h2" href="{{ path('laserGameAutun') }}">Laser Game</a>
                </li>
                <li class="nav-item{% if route == 'bubbleFootAutun' %} active{% endif %}">
                    <a class="nav-link h2" href="{{ path('bubbleFootAutun') }}">Bubble Foot</a>
                </li>
                <li class="nav-item{% if route == 'lancerHacheAutun' %} active{% endif %}">
                    <a class="nav-link h2" href="{{ path('lancerHacheAutun') }}">Lancer de hache</a>
                </li>
                <li class="nav-item{% if route == 'salleGaming' %} active{% endif %}">
                    <a class="nav-link h2" href="{{ path('salleGaming') }}">Salle Gaming</a>
                </li>
            </ul>
        </div>
    </nav>
</header>

<div class="map-responsive">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d680.8310495565636!2d4.309830829262435!3d46.95531991409245!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47f23916f9ad3bdd%3A0x8fd3f81bd97f117a!2s13%20Rue%20du%20Th%C3%A9atre%20Romain%2C%2071400%20Autun!5e0!3m2!1sfr!2sfr!4v1579702412426!5m2!1sfr!2sfr" width="450" height="450" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
</div>
    
{% endblock %}
