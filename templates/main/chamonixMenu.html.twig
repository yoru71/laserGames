{% extends "base.html.twig" %}

{% block title %}{% endblock %}
{% block body %}
<header>
    {% set route = app.request.attributes.get('_route') %}
    <nav id="main-navbar" class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item{% if route == 'chamonixMenu' %} active{% endif %}">
                    <a class="nav-link h2" href="{{ path('chamonixMenu') }}">Chamonix</a>
                </li>
            </ul>
            <ul class="navbar-nav text-right">
                <li class="nav-item{% if route == 'laserGameChamonix' %} active{% endif %}">
                    <a class="nav-link h2" href="{{ path('laserGameChamonix') }}">Laser Game</a>
                </li>
                <li class="nav-item{% if route == 'bubbleFootChamonix' %} active{% endif %}">
                    <a class="nav-link h2" href="{{ path('bubbleFootChamonix') }}">Bubble Foot</a>
                </li>
                <li class="nav-item{% if route == 'lancerHacheChamonix' %} active{% endif %}">
                    <a class="nav-link h2" href="{{ path('lancerHacheChamonix') }}">Lancer de hache</a>
                </li>
            </ul>
        </div>
    </nav>
</header>
<div class="map-responsive">
    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d5550.551945838172!2d6.868779153442395!3d45.925783783303!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb5980891bfd205c7!2sURBAN%20ARENA%20CHAMONIX!5e0!3m2!1sfr!2sfr!4v1579775543271!5m2!1sfr!2sfr" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
</div>   
{% endblock %}
