{% extends "base.html.twig" %}

{% block title %}{% endblock %}
{% block body %}
<header>
    {% set route = app.request.attributes.get('_route') %}
    <nav id="main-navbar" class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item{% if route == 'autunMenu' %} active{% endif %}">
                    <a class="nav-link h2 font" href="{{ path('autunMenu') }}">Autun</a>
                </li>
            </ul>
            <ul class="navbar-nav text-right">
                <li class="nav-item{% if route == 'laserGameAutun' %} active{% endif %}">
                    <a class="nav-link h2 font" href="{{ path('laserGameAutun') }}">Laser Game</a>
                </li>
                <li class="nav-item{% if route == 'bubbleFootAutun' %} active{% endif %}">
                    <a class="nav-link h2 font" href="{{ path('bubbleFootAutun') }}">Bubble Foot</a>
                </li>
                <li class="nav-item{% if route == 'lancerHacheAutun' %} active{% endif %}">
                    <a class="nav-link h2 font" href="{{ path('lancerHacheAutun') }}">Lancer de hache</a>
                </li>
                <li class="nav-item{% if route == 'salleGaming' %} active{% endif %}">
                    <a class="nav-link h2 font" href="{{ path('salleGaming') }}">Salle Gaming</a>
                </li>
            </ul>
        </div>
    </nav>
</header>
<div class="container gridy">
    <div class="row  pt-5 mt-2">
        <!--Carousel Wrapper-->
        <div class="one">
            <div id="carouselAutunControl" class="carousel slide carousel-fade pr-4" data-ride="carousel">
                <!--Slides-->
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <div class="view">
                            <img class="d-block w-100" src="{{asset('image/arcade.jpg')}}"
                                alt="First slide">
                            <div class="mask rgba-black-light"></div>
                        </div>

                    </div>
                    <div class="carousel-item">
                        <!--Mask color-->
                        <div class="view">
                            <img class="d-block w-100" src="{{asset('image/gaming.jpg')}}"
                                alt="Second slide">
                            <div class="mask rgba-black-strong"></div>
                        </div>
                    </div>
                </div>
                <!--/.Slides-->
                <!--Controls-->
                <a class="carousel-control-prev" href="#carouselAutunControl" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselAutunControl" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                <!--/.Controls-->
            </div>
        </div>

        <!--/.Carousel Wrapper-->
    </div>
    <div class="map-responsive two text-white pt-5 mt-2">
        <p class="h5">Borne arcadde, 20 consoles, 500 jeux</p>
        <p class="h5">Location à l'heure</p>
        <p class="h5">Organisations de tournois</p>   
    </div> 
    <div class="three">
    <h2 class="text-center text-white font h2">Tarif</h2>
        <ul class="h3 text-white">
            <li>5 €/personne</li>
            <li>10 €/2 personnes</li>
            <li>12 €/ 4 personnes</li>
            <li>15 €/5 personnes</li>
        </ul>
    </div>
</div>
{% endblock %}